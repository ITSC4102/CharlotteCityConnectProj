<div class="auth-center">
  <div class="login-container">
    <div class="logo">
      <h1>Charlotte City Connect</h1>
      <p>Find and RSVP to local events around you</p>
    </div>

    <% if flash[:alert] %>
  <div style="
    background-color: #ffdddd;
    border-left: 4px solid #ff4444;
    padding: 10px 12px;
    margin-bottom: 1rem;
    border-radius: 6px;
    color: #990000;
    font-weight: 600;
  ">
    <%= flash[:alert] %>
  </div>
<% end %>


    <%= form_with url: login_path, method: :post, local: true do %>
      <label for="email">Email</label>
      <%= email_field_tag :email, nil, placeholder: "Enter your email", required: true %>

      <label for="password">Password</label>
      <%= password_field_tag :password, nil, placeholder: "Enter your password", required: true %>

      <button type="submit">Log In</button>
    <% end %>

    <div class="extra-links">
      <p><a href="/forgot-password">Forgot your password?</a></p>
      <p>New to Charlotte City Connect? <a href="/signup">Sign up here</a></p>
    </div>

    <div class="footer">
      <p>&copy; 2025 Charlotte City Connect. All rights reserved.</p>
    </div>
  </div>
</div>
