<h1 class="text-3xl font-bold mb-4 text-center">Browse Local Events</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @events.each do |event| %>
    <div class="border rounded-lg p-4 shadow hover:shadow-lg transition">
      <h2 class="text-xl font-semibold"><%= event.title %></h2>
      <p class="text-gray-600 mb-2"><%= event.date.strftime("%B %d, %Y") %></p>
      <p><%= truncate(event.description, length: 100) %></p>
      <div class="mt-3">
        <%= link_to "View Details", event_path(event), class: "text-dark-blue font-semibold hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
